@model ShoppingCartViewModel

<h3 style="color: white" class="my-5 py-5">
    Shopping cart
</h3>


<div class="row gx-3">
    <div class="col-8">
        @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
        {
            <div class="card shopping-cart-card mb-2">
                <div class="row">
                    <div class="col-md-4">
                        <img src="@line.Product.ImageUrl" class="img-fluid rounded-start p-2" alt="@line.Product.Name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 style="color: white" class="card-text">@line.Quantity x @line.Product.Name</h5>
                            <div class="d-flex justify-content-between">
                                <h6 style="color: white">@line.Product.Description</h6>
                                <h2 style="color: white">@line.Product.Price.ToString("c")</h2>
                            </div>
                            <a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-id="@line.Product.ID" class="btn btn-primary">Remove from cart</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-4">
        <div class="card shopping-cart-card p-3">
            <div class="row">
                <h4 style="color: white" class="col">Total:</h4>
                <h4 style="color: white" class="col text-end">@Model.ShoppingCartTotal.ToString("c")</h4>
            </div>
            <hr />
            <div class="text-center d-grid">
                <a class="btn btn-secondary" asp-controller="Order" asp-action="Checkout"><h4>Check out now!</h4></a>

            </div>
        </div>
    </div>
</div>
