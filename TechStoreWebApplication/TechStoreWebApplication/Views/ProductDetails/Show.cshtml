@model Product

<h3 class="my-5">
    @Model.Name
</h3>

<div class="row gx-5 py-5">
    <img alt="@Model.Name" src="@Model.ImageUrl" class="img-fluid col-5" />
    <div class="col-7">
        <h4>@Model.Name</h4>
        <p style="color: white">@Model.Description</p>
        <h3 style="color: white" class="pull-right">@Model.Price.ToString("c")</h3>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-secondary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-prodcutId="@Model.ID">Add to cart</a>
            </p>
        </div>
    </div>
</div>